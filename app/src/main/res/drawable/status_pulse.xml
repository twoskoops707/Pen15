<?xml version="1.0" encoding="utf-8"?>
<!-- Pulsing status indicator -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer pulse ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4000FF41"/>
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>

    <!-- Middle ring -->
    <item
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#8000FF41"/>
            <size android:width="16dp" android:height="16dp"/>
        </shape>
    </item>

    <!-- Inner core -->
    <item
        android:top="8dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#FF00FF41"/>
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>
</layer-list>
