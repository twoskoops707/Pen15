<?xml version="1.0" encoding="utf-8"?>
<!-- Active/pressed state with brighter glow -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bright outer glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#8000FFFF"
                android:centerColor="#6000FF41"
                android:endColor="#80BB00FF"
                android:type="linear"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Inner card -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#2A141920"
                android:centerColor="#2A1A1F2E"
                android:endColor="#2A0A0E14"
                android:type="linear"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
</layer-list>
