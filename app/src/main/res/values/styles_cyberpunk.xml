<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Cyberpunk Text Styles -->
    <style name="TextAppearance.Cyberpunk.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Cyberpunk.SectionHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/neon_cyan</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Cyberpunk.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="TextAppearance.Cyberpunk.Console" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_console</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextAppearance.Cyberpunk.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.CyberpunkButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.CyberpunkButtonDanger" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/bg_button_danger</item>
        <item name="android:textColor">@color/neon_red</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.CyberpunkButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/neon_cyan</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.CyberpunkCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_elevated</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/bg_card_cyberpunk</item>
    </style>

    <!-- Console Style -->
    <style name="Widget.CyberpunkConsole">
        <item name="android:background">@drawable/bg_console</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_console</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
</resources>
