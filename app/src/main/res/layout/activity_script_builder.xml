<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/text_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SCRIPT BUILDER"
            android:textColor="@color/func_badusb"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Payloads"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Script Type Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCRIPT TYPE"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKeylogger"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="KEYLOGGER"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReverseShellBuilder"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="REVERSE SHELL"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDataExfil"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="DATA EXFILTRATION"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPersistence"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="PERSISTENCE/BACKDOOR"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="20dp"/>

            <!-- Configuration Form (Hidden initially) -->
            <LinearLayout
                android:id="@+id/configForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONFIGURATION"
                    android:textColor="@color/text_gray"
                    android:textSize="11sp"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutTargetOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Target OS"
                    android:textColorHint="@color/text_gray"
                    app:boxStrokeColor="@color/func_badusb"
                    app:hintTextColor="@color/func_badusb"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTargetOS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:text="Windows"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email for logs"
                    android:textColorHint="@color/text_gray"
                    app:boxStrokeColor="@color/func_badusb"
                    app:hintTextColor="@color/func_badusb"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Send time (24hr format)"
                    android:textColorHint="@color/text_gray"
                    app:boxStrokeColor="@color/func_badusb"
                    app:hintTextColor="@color/func_badusb"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="04:00"
                        android:textColor="@color/text_white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutComputerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Computer name/identifier"
                    android:textColorHint="@color/text_gray"
                    app:boxStrokeColor="@color/func_badusb"
                    app:hintTextColor="@color/func_badusb"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputComputerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPTIONS"
                    android:textColor="@color/text_gray"
                    android:textSize="11sp"
                    android:letterSpacing="0.15"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Run hidden/stealth mode"
                    android:textColor="@color/text_white"
                    app:thumbTint="@color/func_badusb"
                    app:trackTint="@color/text_dim"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPersist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable persistence"
                    android:textColor="@color/text_white"
                    app:thumbTint="@color/func_badusb"
                    app:trackTint="@color/text_dim"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEncrypt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Encrypt logs"
                    android:textColor="@color/text_white"
                    app:thumbTint="@color/func_badusb"
                    app:trackTint="@color/text_dim"
                    android:layout_marginBottom="20dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="GENERATE SCRIPT"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    app:cornerRadius="4dp"
                    android:backgroundTint="@color/func_badusb"
                    android:textColor="@color/black_bg"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <!-- Generated Script Output -->
            <TextView
                android:id="@+id/labelOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERATED SCRIPT"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/scriptOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:text=""
                android:textColor="@color/func_badusb"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:padding="16dp"
                android:background="@color/surface_bg"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/actionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopyScript"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="COPY"
                    android:textSize="14sp"
                    android:letterSpacing="0.1"
                    app:strokeColor="@color/func_badusb"
                    android:textColor="@color/func_badusb"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeployScript"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="DEPLOY TO FLIPPER"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    app:cornerRadius="4dp"
                    android:backgroundTint="@color/func_badusb"
                    android:textColor="@color/black_bg"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
