<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/terminal_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_terminal_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ARP POISONING / MITM"
            android:textColor="@color/terminal_red"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_red"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="âš  WARNING: ARP poisoning is HIGHLY ILLEGAL without authorization. Only use on networks you own!"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_dark_gray"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TARGET CONFIGURATION"
                        android:textColor="@color/terminal_green"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxBackgroundColor="@color/terminal_black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputTarget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Target IP (victim)"
                            android:textColor="@color/terminal_green"
                            android:textColorHint="@color/terminal_gray"
                            android:fontFamily="monospace" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxBackgroundColor="@color/terminal_black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputGateway"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Gateway IP (router)"
                            android:text="192.168.1.1"
                            android:textColor="@color/terminal_green"
                            android:textColorHint="@color/terminal_gray"
                            android:fontFamily="monospace" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/terminal_black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputInterface"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Interface"
                            android:text="wlan0"
                            android:textColor="@color/terminal_green"
                            android:textColorHint="@color/terminal_gray"
                            android:fontFamily="monospace" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_dark_gray"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartPoison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="START ARP POISON"
                        android:backgroundTint="@color/terminal_red"
                        android:textColor="@color/white"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStopPoison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STOP POISON"
                        android:backgroundTint="@color/terminal_gray"
                        android:textColor="@color/white"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDNSSpoof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ENABLE DNS SPOOFING"
                        android:backgroundTint="@color/terminal_yellow"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSSLStrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ENABLE SSL STRIPPING"
                        android:backgroundTint="@color/terminal_cyan"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/terminal_black"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/logOutput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready to perform MITM attack...\n\nThis requires:\n- Target device on same network\n- Termux with arpspoof installed\n- Root access (or use ESP32 for hardware attacks)"
                        android:textColor="@color/terminal_green"
                        android:fontFamily="monospace"
                        android:textSize="12sp" />
                </ScrollView>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
