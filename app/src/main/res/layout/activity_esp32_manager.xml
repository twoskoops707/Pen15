<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/terminal_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_terminal_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ESP32 / AWOK MANAGER"
            android:textColor="@color/terminal_cyan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONNECT TO ESP32"
                android:backgroundTint="@color/terminal_green"
                android:textColor="@color/terminal_black"
                android:fontFamily="monospace"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_dark_gray"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIFI ATTACKS"
                        android:textColor="@color/terminal_green"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnScanNetworks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SCAN NETWORKS"
                        android:backgroundTint="@color/terminal_cyan"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreateAP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EVIL TWIN AP"
                        android:backgroundTint="@color/terminal_yellow"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeauth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DEAUTH ATTACK"
                        android:backgroundTint="@color/terminal_red"
                        android:textColor="@color/white"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSniff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PACKET SNIFFING"
                        android:backgroundTint="@color/terminal_green"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_dark_gray"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLE ATTACKS"
                        android:textColor="@color/terminal_green"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBleScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BLE SCAN & SPAM"
                        android:backgroundTint="@color/terminal_cyan"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/terminal_black"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/logOutput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ESP32/AWOK Manager ready..."
                        android:textColor="@color/terminal_green"
                        android:fontFamily="monospace"
                        android:textSize="12sp" />
                </ScrollView>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
