<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- System Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#0a0a0a"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:strokeColor="#00ff41"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[SYSTEM.INFO]"
                    android:textColor="#00ff41"
                    android:fontFamily="monospace"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:id="@+id/deviceInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="└─ Loading system information..."
                    android:textColor="#008f11"
                    android:fontFamily="monospace"
                    android:textSize="13sp"
                    android:lineSpacingExtra="6dp"/>

                <Button
                    android:id="@+id/btnRefreshInfo"
                    style="@style/TerminalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="[ REFRESH ]"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tools Installation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0a0a0a"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:strokeColor="#00ffff"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[TOOLS.INSTALL]"
                    android:textColor="#00ffff"
                    android:fontFamily="monospace"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:paddingBottom="16dp"/>

                <Button
                    android:id="@+id/btnInstallAircrack"
                    style="@style/TerminalButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="[ INSTALL AIRCRACK-NG ]"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnInstallHashcat"
                    style="@style/TerminalButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="[ INSTALL HASHCAT ]"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
