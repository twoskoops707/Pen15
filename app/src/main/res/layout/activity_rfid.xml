<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/text_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RFID"
            android:textColor="@color/func_rfid"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125 kHz"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Card Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARD DETECTED"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"/>

            <TextView
                android:id="@+id/cardStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WAITING..."
                android:textColor="@color/text_dim"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/cardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/func_rfid"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="32dp"/>

            <!-- Actions -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReadCard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="READ CARD"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                app:cornerRadius="4dp"
                android:backgroundTint="@color/func_rfid"
                android:textColor="@color/black_bg"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveCard"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SAVE TO ARCHIVE"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_rfid"
                android:textColor="@color/func_rfid"
                android:enabled="false"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmulateCard"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="EMULATE CARD"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_rfid"
                android:textColor="@color/func_rfid"
                android:enabled="false"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRollingCode"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ROLLING CODE RECORDER"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_rfid"
                android:textColor="@color/func_rfid"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBruteFob"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="BRUTE FOB OPENER"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_rfid"
                android:textColor="@color/func_rfid"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavedCards"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SAVED CARDS"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/text_gray"
                android:textColor="@color/text_gray"/>

            <!-- Card Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARD INFORMATION"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/cardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:text="Place RFID card near Flipper Zero antenna..."
                android:textColor="@color/text_dim"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:padding="16dp"
                android:background="@color/surface_bg"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
