<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/neon_cyan"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="[SUB-GHZ]"
            android:textColor="@color/func_subghz"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.05"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/frequencyDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="433.920"
            android:textColor="@color/func_subghz"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <!-- OUTPUT DISPLAY AT TOP - 45% OF SCREEN -->
    <androidx.cardview.widget.CardView
        android:id="@+id/outputCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/surface_bg"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintHeight_percent="0.45">

        <ScrollView
            android:id="@+id/logScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/logOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ ./subghz_scanner --init\n\n[READY] Waiting for scan command...\n\nFrequency: 433.920 MHz\nMode: Idle\n\n> Press START to begin scanning"
                android:textColor="@color/neon_green"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp"/>

        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Controls Below -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/outputCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Frequency Presets -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[FREQUENCY SELECT]"
                android:textColor="@color/text_gray"
                android:textSize="9sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn315"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    android:text="315"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    app:strokeColor="@color/func_subghz"
                    app:strokeWidth="1dp"
                    android:textColor="@color/func_subghz"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn433"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    android:text="433"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    app:strokeColor="@color/func_subghz"
                    app:strokeWidth="1dp"
                    android:textColor="@color/func_subghz"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn868"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    android:text="868"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    app:strokeColor="@color/func_subghz"
                    app:strokeWidth="1dp"
                    android:textColor="@color/func_subghz"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn390"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    android:text="390"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    app:strokeColor="@color/func_subghz"
                    app:strokeWidth="1dp"
                    android:textColor="@color/func_subghz"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn915"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="3dp"
                    android:text="915"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    app:strokeColor="@color/func_subghz"
                    app:strokeWidth="1dp"
                    android:textColor="@color/func_subghz"/>

            </GridLayout>

            <!-- Action Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[OPERATIONS]"
                android:textColor="@color/text_gray"
                android:textSize="9sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScan"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="[START SCAN]"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                app:cornerRadius="2dp"
                android:backgroundTint="@color/func_subghz"
                android:textColor="@color/black_bg"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRead"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="[READ RAW]"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                app:strokeColor="@color/func_subghz"
                app:strokeWidth="1dp"
                android:textColor="@color/func_subghz"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBruteForce"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="[BRUTE FORCE]"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                app:strokeColor="@color/neon_red"
                app:strokeWidth="1dp"
                android:textColor="@color/neon_red"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="[STOP]"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                app:cornerRadius="2dp"
                android:backgroundTint="@color/status_disconnected"
                android:textColor="@color/black_bg"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaved"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="[SAVED SIGNALS]"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.05"
                app:strokeColor="@color/text_dim"
                app:strokeWidth="1dp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
