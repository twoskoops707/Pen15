<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/glass_card_bg"
    android:padding="20dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Icon -->
    <ImageView
        android:id="@+id/toolIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:tint="@color/glass_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/toolTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tool Name"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/toolIcon"
        app:layout_constraintStart_toEndOf="@id/toolIcon"
        app:layout_constraintEnd_toStartOf="@id/toolStatus"/>

    <!-- Description -->
    <TextView
        android:id="@+id/toolDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tool description"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolTitle"
        app:layout_constraintStart_toEndOf="@id/toolIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toolIcon"/>

    <!-- Status Badge -->
    <TextView
        android:id="@+id/toolStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textSize="12sp"
        android:textColor="@color/glass_success"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:background="@drawable/status_badge_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
