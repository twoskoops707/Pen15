<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/text_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GPIO / MARAUDER"
            android:textColor="@color/func_gpio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESP32 AWOK V3"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Marauder Tools -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARAUDER TOOLS"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarauder"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="WIFI MARAUDER"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                app:cornerRadius="4dp"
                android:backgroundTint="@color/func_gpio"
                android:textColor="@color/black_bg"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeauth"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="DEAUTH ATTACK"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_gpio"
                android:textColor="@color/func_gpio"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEvilPortal"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="EVIL PORTAL"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_gpio"
                android:textColor="@color/func_gpio"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWifiScan"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="WIFI SCANNER"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_gpio"
                android:textColor="@color/func_gpio"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBLESpam"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="BLE SPAM"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_gpio"
                android:textColor="@color/func_gpio"
                android:layout_marginBottom="12dp"/>

            <!-- GPIO Controls -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPIO CONTROLS"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPinControl"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="PIN CONTROL"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/text_gray"
                android:textColor="@color/text_gray"/>

            <!-- Output Log -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVITY LOG"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/gpioOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:text="Ready. Select a tool to begin..."
                android:textColor="@color/text_dim"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:padding="16dp"
                android:background="@color/surface_bg"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
