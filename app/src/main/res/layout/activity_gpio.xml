<?xml version="1.0" encoding="utf-8"?>
<!-- MILITARY-GRADE GPIO/MARAUDER OPERATIONS INTERFACE -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <!-- STATUS BAR -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#808080"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GPIO / MARAUDER OPS"
            android:textColor="#E6E6E6"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginStart="12dp"/>

        <View
            android:id="@+id/connectionIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/status_dot"
            android:backgroundTint="#7C8D3C"/>

        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READY"
            android:textColor="#7C8D3C"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- MARAUDER TOOLS PANEL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="MARAUDER TOOLS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMarauder"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="WIFI MARAUDER"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12sp"
                        app:backgroundTint="#7C8D3C"
                        app:cornerRadius="2dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeauth"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="DEAUTH ATTACK"
                        android:textColor="#D4672A"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12sp"
                        app:strokeColor="#D4672A"
                        app:strokeWidth="1dp"
                        app:cornerRadius="2dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEvilPortal"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="EVIL PORTAL"
                        android:textColor="#E6A546"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12sp"
                        app:strokeColor="#E6A546"
                        app:strokeWidth="1dp"
                        app:cornerRadius="2dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWifiScan"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="SCAN"
                            android:textColor="#E6E6E6"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="11sp"
                            app:strokeColor="#666666"
                            app:strokeWidth="1dp"
                            app:cornerRadius="2dp"
                            android:layout_marginEnd="4dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBLESpam"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="BLE"
                            android:textColor="#E6E6E6"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="11sp"
                            app:strokeColor="#666666"
                            app:strokeWidth="1dp"
                            app:cornerRadius="2dp"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- GPIO CONTROLS PANEL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="GPIO CONTROLS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPinControl"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="PIN CONTROL"
                        android:textColor="#E6E6E6"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12sp"
                        app:strokeColor="#666666"
                        app:strokeWidth="1dp"
                        app:cornerRadius="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ACTIVITY LOG PANEL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="ACTIVITY LOG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/gpioOutput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:text="Ready. Select a tool to begin..."
                        android:textColor="#7C8D3C"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:background="#141414"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- EXECUTE CONTROL PANEL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="EXECUTION CONTROL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fabControl"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="EXECUTE"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="14sp"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconTint="#000000"
                        app:backgroundTint="#7C8D3C"
                        app:cornerRadius="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
