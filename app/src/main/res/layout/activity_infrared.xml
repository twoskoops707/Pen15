<?xml version="1.0" encoding="utf-8"?>
<!-- MILITARY-GRADE INFRARED OPERATIONS INTERFACE -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <!-- STATUS BAR -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#808080"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IR OPERATIONS"
            android:textColor="#E6E6E6"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginStart="12dp"/>

        <View
            android:id="@+id/connectionIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/status_dot"
            android:backgroundTint="#E6A546"/>

        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STANDBY"
            android:textColor="#E6A546"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <!-- TAB NAVIGATION -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#141414"
        app:tabTextColor="#666666"
        app:tabSelectedTextColor="#E6E6E6"
        app:tabIndicatorColor="#7C8D3C"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabTextAppearance="@android:style/TextAppearance.Small"
        app:layout_constraintTop_toBottomOf="@id/statusBar">

        <com.google.android.material.tabs.TabItem
            android:text="LEARN"/>
        <com.google.android.material.tabs.TabItem
            android:text="TRANSMIT"/>
        <com.google.android.material.tabs.TabItem
            android:text="LIBRARY"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- OPERATION STATUS PANEL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="OPERATION STATUS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:text="READY TO LEARN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E6E6E6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:text="Point remote at Flipper Zero IR receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CONTROL PANEL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="IR CONTROLS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fabControl"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="START LEARN"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="13sp"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconTint="#000000"
                        app:backgroundTint="#7C8D3C"
                        app:cornerRadius="2dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStopLearn"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="STOP"
                        android:textColor="#E6A546"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="13sp"
                        app:strokeColor="#E6A546"
                        app:strokeWidth="1dp"
                        app:cornerRadius="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SIGNAL INFO PANEL -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="SIGNAL DATA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/signalInfo"
                        android:text="Awaiting input..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:fontFamily="monospace"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
