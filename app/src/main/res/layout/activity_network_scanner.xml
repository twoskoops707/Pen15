<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/terminal_black">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_terminal_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NETWORK SCANNER"
            android:textColor="@color/terminal_green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Target Input -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_dark_gray"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TARGET"
                        android:textColor="@color/terminal_green"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/terminal_black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputTarget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="IP or hostname (e.g. 192.168.1.1)"
                            android:textColor="@color/terminal_green"
                            android:textColorHint="@color/terminal_gray"
                            android:fontFamily="monospace" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Scan Buttons -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/terminal_dark_gray"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCAN TYPES"
                        android:textColor="@color/terminal_green"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuickScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QUICK SCAN (-sn)"
                        android:backgroundTint="@color/terminal_green"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeepScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DEEP SCAN (-sV -sC -O)"
                        android:backgroundTint="@color/terminal_cyan"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPortScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ALL PORTS (-p- -T4)"
                        android:backgroundTint="@color/terminal_yellow"
                        android:textColor="@color/terminal_black"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVulnScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VULN SCAN (--script vuln)"
                        android:backgroundTint="@color/terminal_red"
                        android:textColor="@color/white"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Log Output -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/terminal_black"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/logOutput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready to scan...\nEnter target IP/hostname and select scan type."
                        android:textColor="@color/terminal_green"
                        android:fontFamily="monospace"
                        android:textSize="12sp" />
                </ScrollView>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
