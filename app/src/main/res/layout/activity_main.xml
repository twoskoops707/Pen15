<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/surface_dark"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FLIPPER ZERO"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"/>

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="@color/accent_orange"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <!-- Connection Status Indicator -->
    <LinearLayout
        android:id="@+id/connectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/bg_status_chip"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/statusIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_status_dot"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOT CONNECTED"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:letterSpacing="0.05"/>

    </LinearLayout>

    <!-- Central Radial Menu Container -->
    <FrameLayout
        android:id="@+id/radialMenuContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/connectionStatus"
        app:layout_constraintBottom_toTopOf="@id/infoPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <!-- Radial Menu (will be programmatically created) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/radialMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Central Circle -->
            <View
                android:id="@+id/centerCircle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/bg_center_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT\nFUNCTION"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                app:layout_constraintTop_toTopOf="@id/centerCircle"
                app:layout_constraintBottom_toBottomOf="@id/centerCircle"
                app:layout_constraintStart_toStartOf="@id/centerCircle"
                app:layout_constraintEnd_toEndOf="@id/centerCircle"/>

            <!-- Function Buttons in Radial Layout -->
            <!-- Sub-GHz (Top) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSubGHz"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/subghz_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="200dp"
                app:layout_constraintBottom_toTopOf="@id/centerCircle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¡"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub-GHz"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RFID (Top-Right) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnRFID"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/rfid_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginEnd="180dp"
                android:layout_marginBottom="140dp"
                app:layout_constraintBottom_toTopOf="@id/centerCircle"
                app:layout_constraintEnd_toStartOf="@id/centerCircle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”–"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RFID"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NFC (Right) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnNFC"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/nfc_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginEnd="200dp"
                app:layout_constraintTop_toTopOf="@id/centerCircle"
                app:layout_constraintBottom_toBottomOf="@id/centerCircle"
                app:layout_constraintEnd_toStartOf="@id/centerCircle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’³"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NFC"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Infrared (Bottom-Right) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnInfrared"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/infrared_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginEnd="180dp"
                android:layout_marginTop="140dp"
                app:layout_constraintTop_toBottomOf="@id/centerCircle"
                app:layout_constraintEnd_toStartOf="@id/centerCircle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“º"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infrared"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GPIO (Bottom) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnGPIO"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/gpio_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginTop="200dp"
                app:layout_constraintTop_toBottomOf="@id/centerCircle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”Œ"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPIO"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BadUSB (Bottom-Left) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBadUSB"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/badusb_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="140dp"
                app:layout_constraintTop_toBottomOf="@id/centerCircle"
                app:layout_constraintStart_toEndOf="@id/centerCircle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âŒ¨ï¸"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BadUSB"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- iButton (Left) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnIButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/ibutton_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginStart="200dp"
                app:layout_constraintTop_toTopOf="@id/centerCircle"
                app:layout_constraintBottom_toBottomOf="@id/centerCircle"
                app:layout_constraintStart_toEndOf="@id/centerCircle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”‘"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iButton"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bluetooth (Top-Left) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBluetooth"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/bluetooth_color"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginStart="180dp"
                android:layout_marginBottom="140dp"
                app:layout_constraintBottom_toTopOf="@id/centerCircle"
                app:layout_constraintStart_toEndOf="@id/centerCircle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¶"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bluetooth"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <!-- Bottom Info Panel -->
    <LinearLayout
        android:id="@+id/infoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/surface_elevated"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/selectedFunctionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Function Selected"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/selectedFunctionDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap a function above to begin"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExecute"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CONNECT DEVICE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/accent_orange"
            android:textColor="@color/text_primary"
            app:cornerRadius="12dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
