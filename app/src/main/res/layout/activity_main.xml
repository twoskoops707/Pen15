<?xml version="1.0" encoding="utf-8"?>
<!-- CYBERPUNK TACTICAL HACKING TERMINAL -->
<!-- Aesthetic: Military-grade terminal meets underground hacking -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_pattern">

    <!-- TACTICAL HEADER: THREAT LEVEL & STATUS -->
    <LinearLayout
        android:id="@+id/tacticalHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0A000000"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top bar: Classification & Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <!-- Classification -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⬡ UNAUTHORIZED ACCESS"
                android:textColor="#FF0055"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.15"
                android:alpha="0.8"/>

            <!-- Threat Level -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THREAT: HIGH"
                android:textColor="#FFFF00"
                android:textSize="9sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginEnd="12dp"
                android:background="#22FFFF00"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#00FFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Connection Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">

            <!-- Status Pulse Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/status_pulse"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEVICE OFFLINE"
                    android:textColor="#FF0055"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:id="@+id/currentOperation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[STANDBY] Awaiting Flipper Zero connection..."
                    android:textColor="#00AA33"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"
                    android:alpha="0.7"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- MISSION BRIEFING PANEL -->
    <LinearLayout
        android:id="@+id/infoPanelContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/terminal_border"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tacticalHeader">

        <TextView
            android:id="@+id/infoPanelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⬢ MISSION STATUS"
            android:textColor="#00FFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.12"/>

        <TextView
            android:id="@+id/infoDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="└─$ NO DEVICE DETECTED\n└─$ CONNECT VIA USB-C OR BLUETOOTH\n└─$ AWAITING AUTHORIZATION..."
            android:textColor="#00FF41"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp"/>
    </LinearLayout>

    <!-- TACTICAL OPERATIONS GRID -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/infoPanelContainer"
        app:layout_constraintBottom_toTopOf="@id/commandBar">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:padding="12dp"
            android:alignmentMode="alignBounds">

            <!-- RFID CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRFID"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:background="@drawable/card_selector"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬡"
                        android:textColor="#FF00FF"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RFID"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125 kHz"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NFC CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNFC"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬢"
                        android:textColor="#00FFFF"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NFC"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13.56 MHz"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SUB-GHZ CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubGHz"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬣"
                        android:textColor="#00FF41"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUB-GHZ"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="315-915 MHz"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GPIO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGPIO"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬟"
                        android:textColor="#FFFF00"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPIO"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HARDWARE I/O"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BAD USB CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBadUSB"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬢"
                        android:textColor="#FF0055"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BAD USB"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HID INJECT"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- IBUTTON CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIButton"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬡"
                        android:textColor="#BB00FF"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iBUTTON"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-WIRE"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- INFRARED CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfrared"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬣"
                        android:textColor="#FF7700"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INFRARED"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNIVERSAL"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BLUETOOTH CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBluetooth"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/hex_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⬟"
                        android:textColor="#0088FF"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLUETOOTH"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLE SCAN"
                        android:textColor="#00AA33"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>
    </ScrollView>

    <!-- COMMAND BAR -->
    <LinearLayout
        android:id="@+id/commandBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#DD000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Connect Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="⬢ ESTABLISH LINK"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.08"
            app:cornerRadius="8dp"
            app:backgroundTint="#00FFFF"
            android:textColor="#000000"
            android:layout_marginEnd="12dp"/>

        <!-- Archive Button -->
        <ImageView
            android:id="@+id/btnArchive"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_save"
            android:tint="#00FF41"
            android:background="@drawable/terminal_border"
            android:padding="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
