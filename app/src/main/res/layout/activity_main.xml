<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <!-- Connection Status Bar -->
    <LinearLayout
        android:id="@+id/connectionBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/statusIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_dot"
            android:backgroundTint="@color/status_disconnected"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DISCONNECTED"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_manage"
            android:tint="@color/text_gray"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>

    </LinearLayout>

    <!-- Main Functions Grid -->
    <ScrollView
        android:id="@+id/functionsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/connectionBar"
        app:layout_constraintBottom_toTopOf="@id/actionBar">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:padding="12dp"
            android:alignmentMode="alignBounds">

            <!-- Sub-GHz -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubGHz"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_subghz"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUB-GHZ"
                        android:textColor="@color/func_subghz"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300-928 MHz"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_subghz"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RFID -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRFID"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_rfid"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RFID"
                        android:textColor="@color/func_rfid"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125 kHz"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_rfid"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NFC -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNFC"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_nfc"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NFC"
                        android:textColor="@color/func_nfc"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13.56 MHz"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_nfc"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Infrared -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfrared"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_ir"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INFRARED"
                        android:textColor="@color/func_ir"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Universal Remote"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_ir"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GPIO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGPIO"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_gpio"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPIO"
                        android:textColor="@color/func_gpio"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hardware I/O"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_gpio"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BadUSB -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBadUSB"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_badusb"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BAD USB"
                        android:textColor="@color/func_badusb"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HID Emulation"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_badusb"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- iButton -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIButton"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_ibutton"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iBUTTON"
                        android:textColor="@color/func_ibutton"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-Wire Keys"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_ibutton"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bluetooth -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBluetooth"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/func_ble"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLUETOOTH"
                        android:textColor="@color/func_ble"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLE Scanner"
                        android:textColor="@color/text_dim"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@color/func_ble"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="CONNECT"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:cornerRadius="4dp"
            android:backgroundTint="@color/electric_blue"
            android:textColor="@color/black_bg"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/btnArchive"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_save"
            android:tint="@color/text_gray"
            android:background="@drawable/action_button_bg"
            android:padding="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
