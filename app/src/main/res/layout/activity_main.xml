<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <!-- TOP: Terminal Header -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="root@flipper"
                android:textColor="@color/neon_green"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":~$"
                android:textColor="@color/text_white"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:layout_marginStart="4dp"/>

            <View
                android:id="@+id/statusIndicator"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/status_dot"
                android:backgroundTint="@color/status_disconnected"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OFFLINE"
                android:textColor="@color/status_disconnected"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginStart="6dp"/>

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="@color/neon_cyan"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/currentOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[IDLE] Awaiting connection..."
            android:textColor="@color/text_dim"
            android:textSize="9sp"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <!-- CONNECTION INFO PANEL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/infoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/surface_bg"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintTop_toBottomOf="@id/statusBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/infoPanelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[CONNECTION STATUS]"
                android:textColor="@color/neon_cyan"
                android:textSize="9sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/infoDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ No device connected\n> Connect via USB-C or Bluetooth"
                android:textColor="@color/neon_green"
                android:textSize="9sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SCROLLABLE TOOL LIST -->
    <ScrollView
        android:id="@+id/toolsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/infoPanel"
        app:layout_constraintBottom_toTopOf="@id/actionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- FLIPPER ZERO TOOLS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[FLIPPER TOOLS]"
                android:textColor="@color/neon_cyan"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubGHz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_subghz"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> SUB-GHZ"
                        android:textColor="@color/func_subghz"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="315/433/868/915"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRFID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_rfid"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> RFID"
                        android:textColor="@color/func_rfid"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125 kHz"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNFC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_nfc"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> NFC"
                        android:textColor="@color/func_nfc"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13.56 MHz"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfrared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_infrared"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> INFRARED"
                        android:textColor="@color/func_infrared"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Universal"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGPIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_gpio"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> GPIO"
                        android:textColor="@color/func_gpio"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hardware I/O"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBadUSB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_badusb"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> BAD USB"
                        android:textColor="@color/func_badusb"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HID Emul"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_ibutton"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> iBUTTON"
                        android:textColor="@color/func_ibutton"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-Wire"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface_bg"
                app:cardElevation="0dp"
                app:cardCornerRadius="2dp"
                app:strokeColor="@color/func_bluetooth"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="> BLUETOOTH"
                        android:textColor="@color/func_bluetooth"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLE Scan"
                        android:textColor="@color/text_dim"
                        android:textSize="8sp"
                        android:fontFamily="monospace"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- BOTTOM ACTION BAR -->
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="[CONNECT]"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.05"
            app:cornerRadius="2dp"
            android:backgroundTint="@color/neon_cyan"
            android:textColor="@color/black_bg"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/btnArchive"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_save"
            android:tint="@color/neon_green"
            android:background="@drawable/action_button_bg"
            android:padding="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
