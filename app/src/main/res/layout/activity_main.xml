<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/glass_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pen15"
                android:textSize="28sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-black"/>

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="@color/text_secondary"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Connection Status Badge -->
        <LinearLayout
            android:id="@+id/connectionBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/glass_card_bg"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/connectionStatusDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_indicator"/>

            <TextView
                android:id="@+id/textConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnected"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Tab Navigation -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/glass_surface"
        app:tabTextColor="@color/text_tertiary"
        app:tabSelectedTextColor="@color/text_primary"
        app:tabIndicatorColor="@color/glass_primary"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"/>

    <!-- Content ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
