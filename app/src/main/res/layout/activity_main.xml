<?xml version="1.0" encoding="utf-8"?>
<!-- TACTICAL OPERATIONS DASHBOARD - MILITARY-GRADE INTERFACE -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <!-- TOP STATUS BAR -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM STATUS"
                android:textColor="#808080"
                android:textSize="10sp"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.15"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <View
                    android:id="@+id/connectionIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/status_pulse"
                    android:backgroundTint="#E6A546"/>

                <TextView
                    android:id="@+id/connectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STANDBY"
                    android:textColor="#E6A546"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.05"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Settings Button -->
        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_manage"
            android:tint="#808080"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- MAIN CONTENT SCROLL VIEW -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Device Info Panel -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="2dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEVICE INFO"
                        android:textColor="#808080"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.15"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MODEL"
                                android:textColor="#606060"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif-condensed"/>

                            <TextView
                                android:id="@+id/deviceModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unknown"
                                android:textColor="#E0E0E0"
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ANDROID"
                                android:textColor="#606060"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif-condensed"/>

                            <TextView
                                android:id="@+id/androidVersion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#E0E0E0"
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IP ADDRESS"
                                android:textColor="#606060"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif-condensed"/>

                            <TextView
                                android:id="@+id/ipAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#E0E0E0"
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPERATIONAL MODULES"
                android:textColor="#808080"
                android:textSize="10sp"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"/>

            <!-- Module Grid (2 columns) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4">

                <!-- RFID Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRFID"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="RFID"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#7C8D3C"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125 kHz"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Read, clone, and emulate RFID tags"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- NFC Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNFC"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NFC"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#7C8D3C"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13.56 MHz"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Read and write NFC tags and cards"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- SubGHz Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSubGHz"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="SUB-GHZ"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#7C8D3C"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="315-915 MHz"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Capture and replay RF signals"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- WiFi Deauth Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWiFiDeauth"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="WIFI DEAUTH"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#7C8D3C"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.4 GHz"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Wireless network attacks"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- GPIO/Marauder Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGPIO"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="MARAUDER"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#7C8D3C"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ESP32"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="GPIO control and WiFi tools"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- BadUSB Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBadUSB"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="BAD USB"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#D4672A"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HID INJECTION"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Execute payload scripts"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- iButton Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardiButton"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="iBUTTON"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#7C8D3C"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1-WIRE"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Read and emulate Dallas keys"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Infrared Module -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInfrared"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="0dp"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="INFRARED"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"/>

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/status_dot"
                                android:backgroundTint="#7C8D3C"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UNIVERSAL"
                            android:textColor="#606060"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Learn and transmit IR signals"
                            android:textColor="#808080"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
