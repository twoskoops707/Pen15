<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/dark_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/text_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BAD USB"
            android:textColor="@color/func_badusb"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HID Emulation"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Script Library -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCRIPT LIBRARY"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRickRoll"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="RICK ROLL"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWifiGrabber"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="WIFI PASSWORD GRABBER"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReverseShell"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="REVERSE SHELL"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSysInfo"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SYSTEM INFO EXFIL"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDisableDefender"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="DISABLE WINDOWS DEFENDER"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/func_badusb"
                android:textColor="@color/func_badusb"
                android:layout_marginBottom="20dp"/>

            <!-- Actions -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExecute"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="EXECUTE SELECTED SCRIPT"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                app:cornerRadius="4dp"
                android:backgroundTint="@color/func_badusb"
                android:textColor="@color/black_bg"
                android:enabled="false"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCustomScript"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="CUSTOM SCRIPT BUILDER"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:strokeColor="@color/electric_blue"
                android:textColor="@color/electric_blue"/>

            <!-- Output Log -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCRIPT STATUS"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                android:letterSpacing="0.15"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/badUsbOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:text="Select a script to view details..."
                android:textColor="@color/text_dim"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:padding="16dp"
                android:background="@color/surface_bg"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
